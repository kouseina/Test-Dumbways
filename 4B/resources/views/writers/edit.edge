<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

  <title>Data Writers</title>
</head>
<body>

<div class="container" style="margin-top: 80px">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          EDIT WRITERS
        </div>
        <div class="card-body">
          <form action="{{ route('writers.update', { id: writer.id }) }}" method="POST">
            {{ csrfField() }}
            <div class="form-group">
              <label>NAMA</label>
              <input class="form-control" type="text" name="name" value="{{ writer.name }}" placeholder="Masukkan Nama Penulis">
            </div>
            <div class="form-group">
                <label>UMUR</label>
                <input class="form-control" type="text" name="age" value="{{ writer.age }}" placeholder="Masukkan Umur Penulis">
              </div>
            <div class="form-group">
              <button type="submit" class="btn btn-md btn-success">UPDATE</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>